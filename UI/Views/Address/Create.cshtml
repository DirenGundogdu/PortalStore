@model DTO.AddressProcessDto

<form asp-action="Create" asp-controller="Address"
      data-ajax="true" data-ajax-method="POST"
      data-ajax-success="OnSuccess">
    <div class="form-group">
        <label for="">Addresline</label>
        <input type="text" class="form-control" name="AddressLine" id="" placeholder="Enter Addresline">
    </div>
    <div class="form-group">
        <label for="">Country</label>
        <input type="text" class="form-control" name="Country" id="" placeholder="Enter Country">
    </div>
    <div class="form-group">
        <label for="">City</label>
        <input type="text" class="form-control" name="City" id="" placeholder="Enter City">
    </div>
    <div class="form-group">
        <label for="">District</label>
        <input type="text" class="form-control" name="District" id="" placeholder="Enter District">
    </div>
    <div class="form-group">
        <label for="">ZipCode</label>
        <input type="number" class="form-control" name="ZipCode" id="" placeholder="Enter ZipCode">
    </div>

    <input hidden name="CustomerId" value="@ViewBag.customerId" />

    <button type="submit" class="btn my-3 btn-primary">Save</button>
</form>
<script>
    function OnSuccess() {
        alert("Transaction Successful");
        LoadPage();
    }
</script>