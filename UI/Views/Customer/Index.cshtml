@model DTO.CustomerDto


<div class="container">
    <a type="button" class="btn btn-outline-success" asp-controller="Customer" asp-action="Create">Create</a>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">Name Surname</th>
                <th scope="col">Email</th>
                <th scope="col">TCID</th>
                <th scope="col">Birthdate</th>
                <th scope="col">Gsm</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.FirstName @item.LastName</th>
                    <td>@item.Email</td>
                    <td>@item.TCID</td>
                    <td>@item.Birthdate</td>
                    <td>@item.Gsm</td>
                    <td><a type="button" class="btn btn-outline-warning" asp-controller="Customer" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                    <td><button type="button" class="btn-close btn-close-white" asp-controller="Customer" asp-action="Remove" asp-route-id="@item.Id"></button></td>
                </tr>
            }
        </tbody>
    </table>
</div>