@model List<DTO.CategoryDto>
    

    <div class="container">
        <a type="button" class="btn my-3 btn-outline-success" asp-controller="Category" asp-action="Create">Create</a>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Name</th>
                            <td><a type="button" class="btn btn-outline-warning" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                            <td><a type="button" class="btn-close btn-close-white" asp-controller="Category" asp-action="Remove" asp-route-id="@item.Id"></a></td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>